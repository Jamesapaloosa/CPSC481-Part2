<Window x:Class="CPSC_481.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CPSC_481"
        mc:Ignorable="d"
        Title="Menu" 
        Height="641"
        Width="1053"
        ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="4*" />
        </Grid.RowDefinitions>



        <Button x:Name="callServerButton"
                Grid.Row="0"
                Grid.Column="1"
                HorizontalAlignment="Center" 
                Margin="0,0,0,0" >
            <Image Source="waiter.jpg" />
        </Button>



        <local:OrderTableView x:Name= "orderTableView" 
                              Grid.Row="1"
                              Grid.Column="1">
        </local:OrderTableView>
        
        
        
        <TabControl x:Name="tabControl" 
                    Grid.Row="0"
                    Grid.RowSpan="2"
                    Grid.Column="0"
                    Margin="10,26,0,0" 
                    TabStripPlacement="Left">
            <TabItem Header="Meals" HorizontalAlignment="Right">
                <ListView x:Name="MealsListView" ItemsSource="{Binding SourceCollection}" SelectionChanged="listView_SelectionChanged">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="path" Width="70">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Image Source="{Binding imageName}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Description" DisplayMemberBinding="{Binding description}" Width="335"/>
                            <GridViewColumn Header="Price" DisplayMemberBinding="{Binding price}" Width="90"/>
                            <GridViewColumn Header="Add" Width="100">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button>Add to order</Button>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </TabItem>
            <TabItem Header="Sides" HorizontalAlignment="Right">
                <ListView x:Name="SidesListView" ItemsSource="{Binding SourceCollection}" SelectionChanged="listView_SelectionChanged">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="path" Width="70">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Image Source="{Binding imageName}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Description" DisplayMemberBinding="{Binding description}" Width="335"/>
                            <GridViewColumn Header="Price" DisplayMemberBinding="{Binding price}" Width="90"/>
                            <GridViewColumn Header="Add" Width="100">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button>Add to order</Button>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </TabItem>
            <TabItem Header="Dessert" HorizontalAlignment="Right">
                <ListView x:Name="DessertListView" ItemsSource="{Binding SourceCollection}" SelectionChanged="listView_SelectionChanged">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="path" Width="70">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Image Source="{Binding imageName}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Description" DisplayMemberBinding="{Binding description}" Width="335"/>
                            <GridViewColumn Header="Price" DisplayMemberBinding="{Binding price}" Width="90"/>
                            <GridViewColumn Header="Add" Width="100">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button>Add to order</Button>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </TabItem>
            <TabItem Header="Drinks" HorizontalAlignment="Right">
                <ListView x:Name="DrinksListView" ItemsSource="{Binding SourceCollection}"  SelectionChanged="listView_SelectionChanged" Margin="0,0,-10,0">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="path" Width="70">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Image Source="{Binding imageName}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Description" DisplayMemberBinding="{Binding description}" Width="335"/>
                            <GridViewColumn Header="Price" DisplayMemberBinding="{Binding price}" Width="90"/>
                            <GridViewColumn Header="Add" Width="100">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button>Add to order</Button>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </TabItem>

        </TabControl>
        <Label x:Name="TotalPriceLabel" Content="PRICE$$$$$" HorizontalAlignment="Left" Height="28" Margin="777,560,0,0" VerticalAlignment="Top" Width="161"/>
        <Button x:Name="SendOrPayButton" Content="Order" HorizontalAlignment="Left" Height="28" Margin="938,560,0,0" VerticalAlignment="Top" Width="86" Click="SendOrPayButton_Click"/>
        <Image x:Name="image" Source="cover_page_dark.png"  HorizontalAlignment="Left" Height="85" Margin="823,10,0,0" VerticalAlignment="Top" Width="70"/>



    </Grid>
    <Window.Resources>

        <Style TargetType="{x:Type TabItem}">
            <Setter Property="VerticalAlignment" Value="Bottom"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TabItem}">
                        <Grid>
                            <Border Name="Border" Background="LightBlue" BorderBrush="Black" BorderThickness="1,1,1,1">
                                <ContentPresenter x:Name="TitleContent" VerticalAlignment="Center" HorizontalAlignment="Center" ContentSource="Header" Margin="12,2,12,2"/>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="LightBlue" />
                                <Setter Property="FontSize" Value="16"/>
                                <Setter Property="Height" Value="60"/>
                                <Setter Property="Width" Value="120"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="False">
                                <Setter TargetName="Border" Property="Background" Value="LightGray" />
                                <Setter Property="Height" Value="45"/>
                                <Setter Property="Width" Value="100"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>
</Window>