<Window x:Class="CPSC_481.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CPSC_481"
        mc:Ignorable="d"
        Title="Menu" Height="641" Width="1053" ResizeMode="NoResize">
    <Grid>
        <GroupBox x:Name="groupBox" Header="Your Order" FontSize="20" HorizontalAlignment="Left" Height="505" Margin="767,95,0,0" VerticalAlignment="Top" Width="268">
            <ListView x:Name="OrderList" HorizontalAlignment="Left" Height="406" Margin="10,8,0,0" VerticalAlignment="Top" Width="242" FontSize="20">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Item" Width="50">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Item}" FontSize="15px"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Number">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Number}" FontSize="15px"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Total">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Total}" FontSize="15px"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </GroupBox>
        <Button x:Name="button" HorizontalAlignment="Left" Height="80" Margin="955,10,0,0" VerticalAlignment="Top" Width="80">
            <Image Source="Z:\CPSC481\CPSC 481\waiter.jpg" />
        </Button>
        <TabControl x:Name="tabControl" HorizontalAlignment="Left" Height="574" Margin="10,26,0,0" VerticalAlignment="Top" Width="752" TabStripPlacement="Left">
            <TabItem Header="Meals" HorizontalAlignment="Right">
                <ListView x:Name="MealsListView" ItemsSource="{Binding SourceCollection}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="path" Width="70">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Image Source="{Binding Path=path}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Description" DisplayMemberBinding="{Binding Description}" Width="345"/>
                            <GridViewColumn Header="Price" DisplayMemberBinding="{Binding Price}" Width="90"/>
                            <GridViewColumn Header="Add" Width="100">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button>Add to order</Button>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </TabItem>
            <TabItem Header="Sides" HorizontalAlignment="Right">
                <ListView x:Name="SidesListView" ItemsSource="{Binding SourceCollection}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="path" Width="70">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Image Source="{Binding Path=path}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Description" DisplayMemberBinding="{Binding Description}" Width="345"/>
                            <GridViewColumn Header="Price" DisplayMemberBinding="{Binding Price}" Width="90"/>
                            <GridViewColumn Header="Add" Width="100">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button>Add to order</Button>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </TabItem>
            <TabItem Header="Dessert" HorizontalAlignment="Right">
                <ListView x:Name="DessertListView" ItemsSource="{Binding SourceCollection}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="path" Width="70">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Image Source="{Binding Path=path}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Description" DisplayMemberBinding="{Binding Description}" Width="345"/>
                            <GridViewColumn Header="Price" DisplayMemberBinding="{Binding Price}" Width="90"/>
                            <GridViewColumn Header="Add" Width="100">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button>Add to order</Button>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </TabItem>
            <TabItem Header="Drinks" HorizontalAlignment="Right">
                <ListView x:Name="DrinksListView" ItemsSource="{Binding SourceCollection}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="path" Width="70">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Image Source="{Binding Path=path}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Description" DisplayMemberBinding="{Binding Description}" Width="345"/>
                            <GridViewColumn Header="Price" DisplayMemberBinding="{Binding Price}" Width="90"/>
                            <GridViewColumn Header="Add" Width="100">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button>Add to order</Button>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </TabItem>

        </TabControl>
        <Label x:Name="TotalPriceLabel" Content="PRICE$$$$$" HorizontalAlignment="Left" Height="28" Margin="777,560,0,0" VerticalAlignment="Top" Width="161"/>
        <Button x:Name="SendOrPayButton" Content="Pay" HorizontalAlignment="Left" Height="28" Margin="938,560,0,0" VerticalAlignment="Top" Width="86"/>
        <Image x:Name="image" Source="Z:\CPSC481\CPSC 481\cover_page_dark.png"  HorizontalAlignment="Left" Height="85" Margin="823,10,0,0" VerticalAlignment="Top" Width="70"/>



    </Grid>
    <Window.Resources>

        <Style TargetType="{x:Type TabItem}">
            <Setter Property="VerticalAlignment" Value="Bottom"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TabItem}">
                        <Grid>
                            <Border Name="Border" Background="LightBlue" BorderBrush="Black" BorderThickness="1,1,1,1">
                                <ContentPresenter x:Name="TitleContent" VerticalAlignment="Center" HorizontalAlignment="Center" ContentSource="Header" Margin="12,2,12,2"/>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="LightBlue" />
                                <Setter Property="FontSize" Value="16"/>
                                <Setter Property="Height" Value="60"/>
                                <Setter Property="Width" Value="120"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="False">
                                <Setter TargetName="Border" Property="Background" Value="LightGray" />
                                <Setter Property="Height" Value="45"/>
                                <Setter Property="Width" Value="100"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>
</Window>
