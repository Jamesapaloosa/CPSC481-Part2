<Window x:Class="CPSC_481.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CPSC_481"
        mc:Ignorable="d"
        Title="Menu" Height="900" Width="1600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="8*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="4*" />
        </Grid.RowDefinitions>
        <Image x:Name="image"
               Grid.Row="0"
               Grid.Column="0"
               Source="1.jpg"
               HorizontalAlignment="Center" 
               Margin="0,0,0,0"/>
        <Label x:Name="titleLabel" 
               Grid.Row="0"
               Grid.Column="0"
               HorizontalAlignment="Center" 
               VerticalAlignment="Center" 
               Content="Moonlight Diner" 
               FontStyle="Italic" 
               Foreground="AntiqueWhite" 
               Height="34"/>



        <Button x:Name="callServerButton"
                Grid.Row="0"
                Grid.Column="1"
                HorizontalAlignment="Center" 
                Margin="0,0,0,0" >
            <Image Source="waiter.jpg" />
        </Button>



        <TabControl x:Name="tabControl" 
               Grid.Row="1"
               Grid.Column="0"
               Margin="10,10,10,10" >
            <TabItem Header="Meals" Width="100" >
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>
                    <ListBox x:Name="listBox"
                             Grid.Row="0"
                             Grid.Column="0"
                             Margin="10,10,10,10" 
                             SelectionChanged="listBox_SelectionChanged"/>

                    <Grid 
                        Grid.Row="0"
                        Grid.Column="1" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="4*" />
                            <RowDefinition Height="1*" />
                        </Grid.RowDefinitions>
                        <GroupBox x:Name="OrderItemData"
                              Grid.Row="0"
                              Grid.Column="0" 
                              Header="Item Data"
                              Margin="10,10,10,10">
                            <Image x:Name="image1" Source="burger.jpg" HorizontalAlignment="Left" Height="59" Margin="59,0,0,0" VerticalAlignment="Top" Width="59"/>
                        </GroupBox>

                        <Label x:Name="label1" 
                               Grid.Row="1"
                               Grid.Column="0" 
                               FontSize="8"
                               Content="Burger information here" 
                               HorizontalAlignment="Left" 
                               VerticalAlignment="Top"/>

                        <Button x:Name="addButton" 
                                Grid.Row="2"
                                Grid.Column="0" 
                                Content="Add" Click="addButton_Click"/>

                    </Grid>

                </Grid>
            </TabItem>
            <TabItem Header="Sides" Width="100" >
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Dessert" Width="100" >
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Drinks" Width="100" >
                <Grid Background="#FFE5E5E5"/>
            </TabItem>

        </TabControl>



        <local:OrderTableView x:Name= "orderTableView" 
                              Grid.Row="1"
                              Grid.Column="1">
        </local:OrderTableView>
    </Grid>
    <Window.Resources>

        <Style TargetType="{x:Type TabItem}">
            <Setter Property="VerticalAlignment" Value="Bottom"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TabItem}">
                        <Grid>
                            <Border Name="Border" Background="LightBlue" BorderBrush="Black" BorderThickness="1,1,1,1">
                                <ContentPresenter x:Name="TitleContent" VerticalAlignment="Center" HorizontalAlignment="Center" ContentSource="Header" Margin="12,2,12,2"/>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="LightBlue" />
                                <Setter Property="FontSize" Value="16"/>
                                <Setter Property="Height" Value="60"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="False">
                                <Setter TargetName="Border" Property="Background" Value="LightGray" />
                                <Setter Property="Height" Value="45"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>
</Window>
