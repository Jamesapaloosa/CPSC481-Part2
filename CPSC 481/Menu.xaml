<Window x:Class="CPSC_481.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CPSC_481"
        mc:Ignorable="d"
        Title="Menu" Height="450" Width="800">
    <Grid>
        <Image x:Name="image" Source="Z:\CPSC481\CPSC 481\1.jpg" HorizontalAlignment="Left" Height="130" Margin="182,10,0,0" VerticalAlignment="Top" Width="251"/>
        <GroupBox x:Name="groupBox" Header="Your Order" FontSize="30" HorizontalAlignment="Left" Height="319" Margin="579,90,0,0" VerticalAlignment="Top" Width="203">
            <ListBox x:Name="listBox1" FontSize="15" Height="207" Margin="10,26,9,0" VerticalAlignment="Top" SelectionChanged="listBox1_SelectionChanged"/>
        </GroupBox>
        <Button x:Name="button" HorizontalAlignment="Left" Height="80" Margin="702,10,0,0" VerticalAlignment="Top" Width="80">
            <Image Source="Z:\CPSC481\CPSC 481\waiter.jpg" />
        </Button>
        <Label x:Name="label" Content="Moonlight Diner" FontStyle="Italic" Foreground="AntiqueWhite" HorizontalAlignment="Left" Height="34" Margin="315,40,0,0" VerticalAlignment="Top" Width="134"/>
        <TabControl x:Name="tabControl" HorizontalAlignment="Left" Height="264" Margin="82,145,0,0" VerticalAlignment="Top" Width="422">
            <TabItem Header="Meals" Width="100" >
                <Grid Background="#FFE5E5E5">
                    <ListBox x:Name="listBox" HorizontalAlignment="Left" Height="176" Margin="10,10,0,0" VerticalAlignment="Top" Width="248" SelectionChanged="listBox_SelectionChanged"/>
                    <GroupBox x:Name="OrderItemData" Header="Item Data" HorizontalAlignment="Left" Height="176" Margin="263,10,0,0" VerticalAlignment="Top" Width="143">
                        <Image x:Name="image1" Source="Z:\CPSC481\CPSC 481\burger.jpg" HorizontalAlignment="Left" Height="59" Margin="59,0,0,0" VerticalAlignment="Top" Width="59"/>

                    </GroupBox>
                    <Button x:Name="button1" Content="Add" HorizontalAlignment="Left" Height="35" Margin="298,141,0,0" VerticalAlignment="Top" Width="76"/>
                    <Label x:Name="label1" FontSize="8" Content="Burger information here" HorizontalAlignment="Left" Height="33" Margin="277,103,0,0" VerticalAlignment="Top" Width="114"/>

                </Grid>
            </TabItem>
            <TabItem Header="Sides" Width="100" >
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Dessert" Width="100" >
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Drinks" Width="100" >
                <Grid Background="#FFE5E5E5"/>
            </TabItem>

        </TabControl>
        <Label x:Name="TotalPriceLabel" Content="PRICE$$$$$" HorizontalAlignment="Left" Height="28" Margin="598,368,0,0" VerticalAlignment="Top" Width="169"/>



    </Grid>
    <Window.Resources>

        <Style TargetType="{x:Type TabItem}">
            <Setter Property="VerticalAlignment" Value="Bottom"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TabItem}">
                        <Grid>
                            <Border Name="Border" Background="LightBlue" BorderBrush="Black" BorderThickness="1,1,1,1">
                                <ContentPresenter x:Name="TitleContent" VerticalAlignment="Center" HorizontalAlignment="Center" ContentSource="Header" Margin="12,2,12,2"/>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="LightBlue" />
                                <Setter Property="FontSize" Value="16"/>
                                <Setter Property="Height" Value="60"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="False">
                                <Setter TargetName="Border" Property="Background" Value="LightGray" />
                                <Setter Property="Height" Value="45"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>
</Window>
